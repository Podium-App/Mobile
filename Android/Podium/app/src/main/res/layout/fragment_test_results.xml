<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:padding="@dimen/_34dp"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:direction="clockwise"
                app:dotColor="@color/dark_primary"
                app:dotWidth="16dp"
                app:drawDot="true"
                app:enableProgressAnimation="true"
                app:progressBackgroundColor="@color/primary_light"
                app:progressBackgroundStrokeWidth="28dp"
                app:progressCap="round"
                app:progressColor="@color/primary"
                app:progressStrokeWidth="16dp"
                app:startAngle="270"
                app:textColor="@color/dark_primary"
                app:textSize="34sp"
                app:fillBackground="false"
                app:gradientType="linear"
                app:gradientEndColor="@color/primary_light"
                android:id="@+id/circularProgress"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="56%"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/h2"
                android:keepScreenOn="true"
                android:background="@color/primary"
                android:id="@+id/testresultScore"
                />
        </FrameLayout>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dsubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Assessment"
        android:textColor="@color/black"
        style="@style/h2"
        android:layout_margin="@dimen/_16dp"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Report:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/_16dp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/_16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/luna_qlist"
            android:layout_gravity="center_vertical"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 questions attempted"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:padding="@dimen/_8dp"
            android:id="@+id/resultsAvtime"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/_16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/luna_timer"
            android:layout_gravity="center_vertical"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.00 minutes per question on average"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:padding="@dimen/_8dp"
            android:id="@+id/resultsAttempted" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/_16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/luna_failed"
            android:layout_gravity="center_vertical"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/resultsErrors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 of 18 questions missed"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:padding="@dimen/_8dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary"
            android:src="@drawable/luna_back_arrow"
            android:id="@+id/fab"
            android:layout_margin="@dimen/_16dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ButtonDark"
            android:text="@string/review_test"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>