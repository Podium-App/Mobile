<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Podium" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        // Important to draw behind cutouts
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>

    <style name="Theme.Podium" parent="Base.Theme.Podium">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="Theme.AppCompat.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">4000</item>
        <item name="postSplashScreenTheme">@style/Theme.Podium</item>
    </style>

    <style name="activeItem">
        <item name="background">@drawable/white_card</item>
    </style>

    <style name="TextHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
    </style>

    <style name="smallHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
    </style>

    <style name="ButtonLight" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="android:padding">@dimen/_16dp</item>
        <item name="android:background">@drawable/button_bg_light</item>
        <item name="android:layout_margin">@dimen/_16dp</item>
    </style>

    <style name="ButtonDark" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="android:padding">@dimen/_16dp</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:layout_margin">@dimen/_16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>




</resources>